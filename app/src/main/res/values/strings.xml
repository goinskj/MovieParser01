    <!-- Key name for sort preference in SharedPreferences -->
    <string name="pref_sort_label">Sort</string>

    <!-- Label for popular option in sort preference -->
    <string name="pref_sort_label_popular">Popular</string>

    <!-- Label for rated option in sort preference -->
    <string name="pref_sort_label_Rated">Rated</string>

    <!-- Key name for sort preference in SharedPreferences -->
